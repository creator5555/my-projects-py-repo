#include <iostream>
#include <vector>
#include <windows.h>
#include <string>
using namespace std;


int main() 
{

	cout << "----------------------------------------------------------------------------------------------------------" << endl;
	int h;
	int m;
	int s;
	cout << "enter hours" << "\n";
	cin >> h;
	cout << "enetr minutes" << "\n";
	cin >> m;
	cout << "enter seconds" << "\n";
	cin >> s;

	
	while (0 == 0) 
	{
		Sleep(1000);
		s++;
		if (s == 60) 
		{
			m++;
			s = 0;
		}
		if (m == 60) 
		{
			h++;
			m = 0;
				
		}
		if (h == 24) 
		{
			h = 0;
			s++;
		}
		system("cls");
		cout << h << ":" << m << ":" << s << endl;
	}
	return 0;
}
